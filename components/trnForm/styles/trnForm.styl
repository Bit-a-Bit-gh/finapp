.trnForm
  z-index 100
  position fixed
  bottom 0
  height auto

  @media $media-phone
    left 0
    width 100%

  @media $media-laptop
    top 10%
    right 10%
    bottom inherit
    height calc(100% - 20%)

  &__overflow
    position fixed
    left 0
    bottom 0
    width 100%
    height 100%
    background var(--c-bg-overflow)

  &__wrap
    position relative
    display flex
    flex-grow 1
    flex-flow column nowrap
    max-width 500px
    margin 0 auto
    background var(--c-bg-4)

    /.light-mode &
      background var(--c-bg-2)

    @media $media-phone
      max-height calc(100vh - 24px)
      margin-left auto

    @media $media-laptop
      width 400px
      max-height calc(100vh - 100px)
      background 0

  &__scroll
    overflow hidden
    overflow-y auto
    scrollbar()
    @media $media-laptop
      background var(--c-bg-4)

  &__calendar
    padding $m7 0

    .categories
      padding-bottom 0

.formTitle
  padding $m7
  fontFamilyNunito()
  color var(--c-font-4)
  font-size 18px
  font-weight 700

.formCategories
  padding 0
  padding-bottom $m7

.formWallets
  padding-bottom $m4

  &__input
    position relative

    &__value
      position relative
      z-index 2
      width 100%
      padding $m8 $m9
      color var(--c-font-2)
      font-header-1()
      font-weight 500
      font-size 36px
      text-align right
      background 0
      border 0

.trnFormAnimation
  &-enter-active
  &-leave-active
    opacity 1
    anim()

    @media $media-phone
      transform translate(0, 0)
      transition opacity 200ms ease-out, transform 250ms ease-out

    @media $media-laptop
      transform translate(0, 0)

  &-enter
  &-leave-to
    opacity 0
    transition opacity 200ms ease-out, transform 250ms ease-out

    @media $media-phone
      transform translate(0, 10px)

    @media $media-laptop
      transform translate(10px, 0)

  &-leave-to
    @media $media-phone
      transform translate(0, 100px)
